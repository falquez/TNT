{
    "metadata": {
        "description": "Example configuration file for the (1+1) Kogut-Susskind Hamiltonian."
    },
    "tolerance": {
        "convergence": 1e-05,
        "eigenvalue": 1e-08,
        "svd": 1e-10
    },
    "directories": {
        "results": "results",
        "network": "network"
    },
    "network": {
        "topology": "MPS",
        "length": 40,
        "max_bond_dim": 12
    },
    "hamiltonian": {
        "dim": 14,
        "operators": {
            "single": "E2 + y*(Id+sgn(l)*N)",
            "nearest": [
                [  "sqrt(x)*U1",  "sqrt(x)*V1" ],
                [  "sqrt(x)*U2",  "sqrt(x)*V2" ],
                [  "sqrt(x)*U3",  "sqrt(x)*V3" ],
                [  "sqrt(x)*U4",  "sqrt(x)*V4" ],
                [  "sqrt(x)*U5",  "sqrt(x)*V5" ],
                [  "sqrt(x)*U6",  "sqrt(x)*V6" ],
                [  "sqrt(x)*U7",  "sqrt(x)*V7" ],
                [  "sqrt(x)*U8",  "sqrt(x)*V8" ],
                [  "sqrt(x)*U9",  "sqrt(x)*V9" ],
                [ "sqrt(x)*U10", "sqrt(x)*V10" ],
                [ "sqrt(x)*U11", "sqrt(x)*V11" ],
                [ "sqrt(x)*U12", "sqrt(x)*V12" ]
            ]
        }
    },
    "constraints": {
        "meson": {
            "operator": "N",
            "value": 10,
            "weight": 2
        },
        "boundary1": {
            "operator": "F2",
            "site": 1,
            "weight": 1E3
        },
        "boundary2": {
            "operator": "E2",
            "site": 10,
            "weight": 1E3
        }
    },
    "observables": {
        "N": { "type": "site", "operator": "N" },
        "E2": { "type": "site", "operator": "E2" },
        "F2": { "type": "site", "operator": "F2" },
        "C2": { "type": "shift", "value": 2}
    },
    "operators": {
        "E2": {
            "file": "hamiltonian2_4.hdf5",
            "path": "/HilbertSpace/Operator/E2",
            "sparse": true
        },
        "F2": {
            "file": "hamiltonian2_4.hdf5",
            "path": "/HilbertSpace/Operator/F2",
            "sparse": true
        },
        "N": {
            "file": "hamiltonian2_4.hdf5",
            "path": "/HilbertSpace/Operator/N",
            "sparse": true
        },
        "U": {
            "file": "hamiltonian2_4.hdf5",
            "path": "/HilbertSpace/Operator/U",
            "sparse": true
        },
        "V": {
            "file": "hamiltonian2_4.hdf5",
            "path": "/HilbertSpace/Operator/V",
            "sparse": true
        }
    },
    "parameters": {
        "g": [0.6, 1.0, 5],
        "m": 0.12,
        "x": "1/(g*g)",
        "y": "2*m/(g*g)",
        "VAR": "1/(g*g*g*g)"
    },
    "restart": false
}
